% COLOUR LINKS.
\hypersetup{colorlinks = true, allcolors = blue}

% DEFINITION ENVIRONMENTS.
\newtheorem{theorem}{Theorem}
\newtheorem{lemma}{Lemma}
\newtheorem{corollary}{Corollary}
\newtheorem{proposition}{Proposition}
\theoremstyle{definition}
\newtheorem{definition}{Definition}

% NEW COMMANDS.
\newcommand{\compproblem}[1]{\mathsf{\textsc{#1}}}

% COLOUR DEFINITIONS.
\input{} % Insert colour file.

% FRAMED BOX STYLES.
% Question style.
\mdfdefinestyle{question}{
    innertopmargin      = 0.8\baselineskip,
    innerbottommargin   = 0.8\baselineskip,
    roundcorner         = 5pt
}

% Question environment.
\newenvironment{question}[1][\unskip]{
    \begin{mdframed}[style = question]
}{
    \end{mdframed}
    \medskip
}

% Rubric style.
\mdfdefinestyle{rubric}{
    innertopmargin      = 0.8\baselineskip,
    innerbottommargin   = 0.8\baselineskip,
    backgroundcolor     = red!10
}

% Rubric environment.
\newenvironment{rubric}[1][\unskip]{
    \begin{mdframed}[style= r ubric, linecolor = red!60!black, fontcolor = red!60!black]
    {\bfseries Rubric.}
}{
    \end{mdframed}
    \medskip
}

% Solution style.
\mdfdefinestyle{solution}{
    innertopmargin      = 0.8\baselineskip,
    innerbottommargin   = 0.8\baselineskip,
    backgroundcolor     = green!10
}

% Solution environment.
\newenvironment{solution}[1][\unskip]{
    \begin{mdframed}[style = solution]
    {\bfseries Solution.}
}{
    \end{mdframed}
    \medskip
}%          